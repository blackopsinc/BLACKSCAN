#!/bin/sh

# Function to install BLACKSCAN
install_blackscan() {
    echo "Installing BLACKSCAN"
    curl -H 'Cache-Control: no-cache' -k 'https://raw.githubusercontent.com/blackopsinc/BLACKSCAN/main/install.sh' | sh
}

# Function to install a BLACKSCAN module
install_module() {
    module_name="$1"
    if [ -z "$module_name" ]; then
        echo "Error: No module name provided."
        exit 1
    fi

    echo "Installing BLACKSCAN - $module_name Module"
    # Try the primary URL
    curl -H 'Cache-Control: no-cache' -k "https://raw.githubusercontent.com/blackopsinc/BLACKSCAN/main/modules/$module_name" | sh
    if [ $? -ne 0 ]; then
        echo "Primary URL failed. Attempting fallback URL..."
        # Try the fallback URL
        curl -H 'Cache-Control: no-cache' -k "https://raw.githubusercontent.com/blackopsinc/BLACKSCAN/refs/heads/main/modules/$module_name" | sh
        if [ $? -ne 0 ]; then
            echo "Error: Failed to install module $module_name from both primary and fallback URLs."
            exit 1
        fi
    fi
}

# Function to call a playbook
call_playbook() {
    playbook_name="$1"
    if [ -z "$playbook_name" ]; then
        echo "Error: No playbook name provided."
        exit 1
    fi

    echo "Executing playbook: $playbook_name"
    # Try the primary URL
    curl -H 'Cache-Control: no-cache' -k "https://raw.githubusercontent.com/blackopsinc/BLACKSCAN/main/playbooks/$playbook_name" | sh
    if [ $? -ne 0 ]; then
        echo "Primary URL failed. Attempting fallback URL..."
        # Try the fallback URL
        curl -H 'Cache-Control: no-cache' -k "https://raw.githubusercontent.com/blackopsinc/BLACKSCAN/refs/heads/main/playbooks/$playbook_name" | sh
        if [ $? -ne 0 ]; then
            echo "Error: Failed to execute playbook $playbook_name from both primary and fallback URLs."
            exit 1
        fi
    fi
}

# Main script logic
case "$1" in
    install)
        install_blackscan
        ;;
    module)
        install_module "$2"
        ;;
    playbook)
        call_playbook "$2"
        ;;
    *)
        echo "Usage: $0 {install|module <module_name>|playbook <playbook_name>}"
        exit 1
        ;;
esac
